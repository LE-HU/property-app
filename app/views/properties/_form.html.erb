<%= form_with(model: property, local: true) do |f| %>

  <%= render partial: "shared/validation", locals: { item: property }  %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rooms %>
    <%= f.number_field :rooms, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bathrooms %>
    <%= f.number_field :bathrooms, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control" %>
    <%= f.hidden_field :photo_cache %>
    <% if @property.photo.present? %>
      <%= image_tag @property.photo.thumb.url, class: "my-2" %>
    <% end %>

  </div>

  <div class="actions">
    <%= f.submit "Add Property", class: "btn btn-success" %>
  </div>
<% end %>
